{
  "$schema": "http://json-schema.org/draft-04/schema",
  "$id": "https://github.com/AltaColina/robot-commando/tree/main/RobotCommando.Shared/Json/Schemas/enemy-schema.json",
  "title": "JSON Schema for Item",

  "type": "object",

  "properties": {
    "id": {
      "type": "string"
    },
    "tag": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "icon": {
      "type": "string"
    },
    "staminaMax": {
      "type": "integer"
    },
    "stamina": {
      "type": "integer"
    },
    "skillMax": {
      "type": "integer"
    },
    "skill": {
      "type": "integer"
    }
  },
  "required": [ "tag", "name", "description", "icon", "staminaMax", "stamina", "skillMax", "skill" ]
}
