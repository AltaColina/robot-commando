{
  "$schema": "http://json-schema.org/draft-04/schema",
  "$id": "https://raw.githubusercontent.com/AltaColina/robot-commando/main/RobotCommando.Shared/Json/Schemas/choice-schema.json",
  "title": "JSON Schema for Choice",

  "type": "object",

  "properties": {
    "text": {
      "type": "string"
    },
    "link": {
      "type": "integer"
    },
    "condition": {
      "type": "string"
    },
    "effect": {
      "type": "string"
    },
    "visibleWhenDisabled": {
      "type": "boolean"
    }
  },
  "required": [ "text", "link" ]
}
